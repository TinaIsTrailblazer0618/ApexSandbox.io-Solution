public static Integer longestDistinctSubstring(String str, Integer k){ 
    //solution here
    Integer left = 0;
    Integer current = 0;
    Integer answer = 0;
    Set<Integer> characters = new Set<Integer>();

    for (Integer right = 0; right < str.length(); right++) {
        if (!characters.contains(str.charAt(right))) {
            characters.add(str.charAt(right));
            current++;
        }
        while (current > k) {
            current--;
            left++;
        }
        
        answer = Math.max(answer, right - left + 1);
    }

    return answer;
}