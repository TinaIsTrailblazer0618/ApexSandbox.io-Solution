public static Integer longestDistinctSubstring(String str, Integer k){ 
    Integer left = 0;
    Integer answer = 0;
    Map<Integer, Integer> characters = new Map<Integer, Integer>();

    for (Integer right = 0; right < str.length(); right++) {
        Integer c = str.charAt(right);
        if (characters.containsKey(c)) {
            characters.put(c, characters.get(c) + 1);
        } else {
            characters.put(c, 1);
        }

        while (characters.size() > k) {
            Integer  = str.charAt(left);
                characters.put(
                    cLeft,
                    characters.get(cLeft) - 1
                );
            if (characters.get(cLeft) == 0) {
                characters.remove(cLeft);
            }
            left++;
        }
        
        answer = Math.max(answer, right - left + 1);
    }

    return answer;
}