public Boolean companionPlants(List<String> plants) {
    //code here
    Boolean isCompanion = false;
    Map<String, String> companionPlantMap = new Map<String, String>{
        'cucumbers' => 'lettuce',
        'onions' => 'lettuce',
        'carrots' => 'onions',
        'tomatoes' => 'onions' 
    };

    for (Integer i = 0; i < plants.size(); i++) {
        String plant1 = plants[i];
        String plant2 = plants[i + 1];
        if (companionPlantMap.containskey(plant1) && plant2 == companionPlantMap.get(plant1)) {
            isCompanion = true;
        } if else (companionPlantMap.containskey(plant2) && plant1 == companionPlantMap.get(plant2)) {
            isCompanion = true;
        } else {
            isCompanion = false;
            break;
        }
    }
    
    return isCompanion;
}