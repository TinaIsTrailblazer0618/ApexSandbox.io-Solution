public void createCourseAndClass(String name, String description) {
    Integer maxSize = 255;

    apxio__Course__c course = new apxio__Course__c();
    course.Name = name;
    course.apxio__Course_Details__c = description;
    insert course;

    Boolean isNotNull = description != null;
    Boolean needToTruncate = description?.length() > maxSize;

    apxio__Class__c child = new apxio__Class__c();
    child.apxio__Course__c = course.Id;
    child.Name = name;
    child.apxio__Description__c = 
        isNotNull ? needToTruncate ? description.substring(0, maxSize) : null; 

    insert child;
}